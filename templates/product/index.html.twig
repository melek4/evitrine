{% extends 'base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<h1>Liste des produits</h1>

<table class="table">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Libell√©</th>
			<th scope="col">Image</th>
			<th scope="col">Prix unitaire</th>
			<th><a href="{{path('add2')}}" class="btn btn-danger">Ajouter</button></th>
		</tr>
	</thead>
	<tbody>
		{% for product in products %}
			<tr>
				<th scope="row">{{product.Lib}}</th>
				<td>{{product.Img}}</td>
				<td>{{product.Pu}}</td>
				<td>
					<a href="{{path('detail',{'id':product.id})}}" class="btn btn-primary">detail</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}
